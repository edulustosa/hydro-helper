{
  "manifest_version": 3,
  "name": "HydroHelper",
  "version": "1.0.1",
  "description": "A browser extension to keep track of your water consumption",
  "icons": {
    "16": "assets/images/water-bottle-16.png",
    "32": "assets/images/water-bottle-32.png",
    "64": "assets/images/water-bottle-64.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/images/water-bottle-32.png",
    "default_title": "HydroHelper"
  },
  "permissions": ["notifications", "alarms"],
  "background": {
    "service_worker": "scripts/background.js"
  }
}
